<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCMobile.Views.MyTranscripts" 
            xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"      
            xmlns:constants="clr-namespace:TCMobile;assembly=TCMobile"
             xmlns:vm="clr-namespace:TCMobile.ViewModels"
             Title="{Binding Title}">
    <NavigationPage.TitleView>
        <StackLayout Style="{StaticResource headerContainer}">
            <ffimageloading:CachedImage Style="{StaticResource headerImage}" Source="{Binding Source={x:Static constants:Constants.Logo}}"></ffimageloading:CachedImage>
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.BindingContext>
        <vm:MyTranscriptsViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <StackLayout>
                <StackLayout x:Name="Courses"></StackLayout>
                <ActivityIndicator x:Name="CatalogueProgress" IsVisible="False" HeightRequest="20"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>